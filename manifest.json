{
  "manifest_version": 3,
  "name": "LangBro",
  "version": "1.6",
  "description": "Click words on pages to see StarDict definitions or Translations (AI or GoogleTranslate).",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js", "structured-db.js"]
  },
  "web_accessible_resources": [{"resources": ["pako.min.js", "icon_Google_Translate.png", "icon_gemini.png", "content-rxjs.css"], "matches": ["<all_urls>"]}],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-rxjs.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "langbro-dictionary@example.com"
    }
  }
}
