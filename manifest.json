{
  "manifest_version": 3,
  "name": "WordClick Dictionary",
  "version": "1.0",
  "description": "Click words on pages to see StarDict definitions.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [{"resources": ["pako.min.js"], "matches": ["<all_urls>"]}],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "options.html"
  },
  "icons": {
    "128": "icon128.png"
  }
}
